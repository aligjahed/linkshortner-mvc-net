@model RegisterViewModel


@{
    ViewData["Title"] = "Register";
}

<div class="main d-flex justify-content-center align-items-center p-4">
    <div class="main-body">
        <div class="d-flex w-100 h-100 flex-column align-items-center register">
            <div class="text-center register-header pb-4 mb-md-2">
                <h1>Register</h1>
                <p>Create a new account to access LinkShortner</p>
            </div>
            @if (!string.IsNullOrEmpty(@Model.Message))
            {
                <div class="w-75">
                    @switch (@Model.MessageType)
                    {
                        case "error":
                            <div class="alert alert-danger d-flex align-items-center">
                                <div class="bi bi-exclamation-triangle me-2"></div>
                                <div>
                                    @Model.Message
                                </div>
                            </div>
                            break;
                        case "success":
                            <div class="alert alert-success d-flex align-items-center">
                                <div class="bi bi-check-circle me-2"></div>
                                <div>
                                    @Model.Message
                                </div>
                            </div>
                            break;
                    }
                </div>
            }
            <section class="mb-4 w-100 d-flex justify-content-center">
                <form method="post" id="RegisterForm" class="needs-validation" asp-action="Register" asp-controller="Account" novalidate>
                    <div class="row row-cols-md-auto">
                        <div class="mb-2 register-form-div">
                            <label for="usernameInput" class="form-label">Username</label>
                            <input asp-for="Account.Username" type="text" class="form-control" id="usernameInput" required/>
                            <div class="invalid-feedback">Please provide a username</div>
                        </div>
                        <div class="mb-2 register-form-div">
                            <label for="emailInput" class="form-label">Email</label>
                            <input asp-for="Account.Email" type="email" class="form-control" id="emailInput" required/>
                            <div class="invalid-feedback">Please provide a valid email</div>
                        </div>
                    </div>
                    <div class="row row-cols-md-auto">
                        <div class="mb-2 register-form-div">
                            <label for="passwordInput" class="form-label">Password</label>
                            <input asp-for="Account.Password" type="password" minlength="6" class="form-control" id="passwordInput" required/>
                            <div class="invalid-feedback">Please enter a password with 8-6 numbers and/or letters</div>
                        </div>
                        <div class="mb-5 register-form-div">
                            <label for="confirmPasswordInput" class="form-label">Confirm Password</label>
                            <input asp-for="PasswordConfirmation" type="password" class="form-control" id="confirmPasswordInput" required/>
                            <div class="invalid-feedback">Please confirm your password</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary">Register</button>
                </form>
            </section>
            <p>Already an user? <a asp-action="Login" asp-controller="Account" class="link-primary">Login</a></p>
        </div>
    </div>
</div>